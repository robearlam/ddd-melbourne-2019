@page "{castMemberId}"
@model CastMemberModel
@{
    ViewData["Title"] = "Robs Movie List";
}

<div class="row">
    <h1 class="display-1">@Model.CastMember.FirstName @Model.CastMember.LastName</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-3">
                <img src="@Model.CastMember.ImageUrl" class="img-thumbnail" alt="@Model.CastMember.FirstName @Model.CastMember.LastName" />
        </div>
        <div class="col-6">
            <div class="row">
                <p><a href="@Model.CastMember.ImdbUrl">IMDB</a></p>
            </div>
            <div class="row">
                @foreach (var movie in Model.Movies)
                {
                    <div class="row">
                        <div class="col-3">
                            <img src="@movie.ImageUrl" class="rounded img-thumbnail" alt="@movie.Title poster" />
                        </div>
                        <div class="col-6">
                            <a href="/movie/@movie.MovieId">@movie.Title</a>
                        </div>
                    </div>
                }
            </div>
            
        </div>
    </div>
</div>