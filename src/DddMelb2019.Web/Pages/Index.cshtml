@page
@model IndexModel
@{
    ViewData["Title"] = "Robs Movie List";
}

<div class="row">
    <div class="col">
        <h1 class="display-4">Welcome to Robs Movie List!</h1>
        <p>Here is a list of awesome movies you should watch right now...</p>
    </div>
</div>
<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="card" style="width: 12rem;">
            <img class="card-img-top" src="@movie.ImageUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@movie.Title </h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="/movie/@movie.MovieId" class="btn btn-primary">View Details</a>
            </div>
        </div>
    }
</div>